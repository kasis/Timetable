<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timetable.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18"/>

    <application
       	android:name="org.holoeverywhere.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
       	android:theme="@style/Holo.Theme.Light.DarkActionBar">
        <activity
            android:name="com.example.timetable.EventDayViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.timetable.EventAddActivity">
        </activity>
        <activity
            android:name="com.example.timetable.EventEditActivity">
        </activity>
        
    	<!--  include tests -->
    	<uses-library android:name="android.test.runner"/>
	
	</application>

    <instrumentation 
        android:label="All Tests"
        android:name="com.example.timetable.tests.MyInstrumentationTestRunner"
        android:targetPackage="com.example.timetable" />
</manifest>
